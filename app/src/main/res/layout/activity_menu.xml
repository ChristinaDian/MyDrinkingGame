<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCD9D9"
    tools:context=".MenuActivity">

    <Button
        android:id="@+id/cardGamebutton"
        android:layout_width="269dp"
        android:layout_height="88dp"
        android:layout_marginTop="56dp"
        android:text="CardGame"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/kingsCupButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <Button
        android:id="@+id/kingsCupButton"
        android:layout_width="269dp"
        android:layout_height="88dp"
        android:text="Kings cup"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/spinTheBottleButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardGamebutton"
        app:layout_constraintVertical_bias="0.64" />

    <Button
        android:id="@+id/spinTheBottleButton"
        android:layout_width="269dp"
        android:layout_height="88dp"
        android:text="Spin the bottle"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textView8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kingsCupButton" />

    <Button
        android:id="@+id/spinTheWheelButton"
        android:layout_width="269dp"
        android:layout_height="88dp"
        android:text="Spin the wheel"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinTheBottleButton"
        app:layout_constraintVertical_bias="0.403" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="405dp"
        android:layout_height="141dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coming out soon :)"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/spinTheWheelButton"
        app:layout_constraintStart_toStartOf="@+id/spinTheWheelButton" />

</androidx.constraintlayout.widget.ConstraintLayout>